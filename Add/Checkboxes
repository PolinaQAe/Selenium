import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;

import static org.junit.Assert.assertFalse;
import static org.junit.Assert.assertTrue;

public class CheckboxesTest {
    private WebDriver driver;

    @Before
    public void setUp() {
        driver = new ChromeDriver();
        driver.get("http://the-internet.herokuapp.com/checkboxes");
    }

    @Test
    public void testCheckboxes() {
        WebElement checkbox1 = driver.findElements(By.cssSelector("[type=checkbox]")).get(0);
        WebElement checkbox2 = driver.findElements(By.cssSelector("[type=checkbox]")).get(1);

        // Проверяем, что первый чекбокс unchecked
        assertFalse(checkbox1.isSelected());

        // Отмечаем первый чекбокс и проверяем, что он checked
        checkbox1.click();
        assertTrue(checkbox1.isSelected());

        // Проверяем, что второй чекбокс checked
        assertTrue(checkbox2.isSelected());

        // Убираем отметку со второго чекбокса и проверяем, что он unchecked
        checkbox2.click();
        assertFalse(checkbox2.isSelected());
    }

    @After
    public void tearDown() {
        driver.quit();
    }
}
